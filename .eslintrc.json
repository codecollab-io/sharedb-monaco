{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "settings": {
        "import/resolver": {
            "typescript": {} // this loads <rootdir>/tsconfig.json to eslint
        }
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "consistent-return": "off",
        "no-underscore-dangle": "off",
        "padded-blocks": [
            "error",
            "always",
            { "allowSingleLineBlocks": true }
        ],
        "indent": [
            "error",
            4
        ],
        "object-curly-newline": "off",
        "import/extensions": [
            "error",
            {
                "tsx": "never",
                "ts": "never",
                "json": "always"
            }
        ]
    }
}